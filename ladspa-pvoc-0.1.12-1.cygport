DESCRIPTION="LADSPA phase-vocoding plugins"
HOMEPAGE="http://quitte.de/dsp/pvoc.html"
SRC_URI="http://quitte.de/dsp/pvoc_${PV}.tar.gz"
PATCH_URI="0.1.12-build.patch"

SRC_DIR="pvoc-${PV}"

DISTCLEANFILES="ladspa.h"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_install() {
	cd ${B}
	cyginstall PREFIX=${D}/usr
	# coreutils .exe handling
	strip ${D}/usr/bin/*
}
